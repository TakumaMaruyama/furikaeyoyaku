generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model GlobalSettings {
  id               Int    @id @default(1)
  makeupWindowDays Int    @default(30)
  cutoffTime       String @default("16:00")
}

model ClassSlot {
  id                    String   @id
  date                  DateTime
  startTime             String
  courseLabel           String
  classBand             String
  capacityLimit         Int
  capacityCurrent       Int
  capacityMakeupAllowed Int
  capacityMakeupUsed    Int      @default(0)
  waitlistCount         Int      @default(0)
  lessonStartDateTime   DateTime
  lastNotifiedRequestId String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  absenceNotices       AbsenceNotice[]
  makeupAbsenceNotices AbsenceNotice[] @relation("MakeupSlot")
}

model AbsenceNotice {
  id                   String        @id @default(cuid())
  childName            String
  declaredClassBand    String
  contactEmail         String?
  absentDate           DateTime
  originalSlotId       String
  resumeToken          String        @unique
  makeupDeadline       DateTime
  makeupStatus         String        @default("ABSENT_LOGGED")
  makeupSlotId         String?
  makeupAllowanceDelta Int           @default(0)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  originalSlot         ClassSlot     @relation(fields: [originalSlotId], references: [id])
  makeupSlot           ClassSlot?    @relation("MakeupSlot", fields: [makeupSlotId], references: [id])
  requests             Request[]

  @@index([originalSlotId])
  @@index([makeupDeadline])
  @@unique([childName, originalSlotId])
}

model Request {
  id                   String        @id
  childName            String
  declaredClassBand    String
  absentDate           DateTime
  toSlotId             String
  status               String
  contactEmail         String?
  confirmToken         String?
  declineToken         String?
  toSlotStartDateTime  DateTime
  createdAt            DateTime      @default(now())
  absenceNoticeId      String?

  absenceNotice        AbsenceNotice? @relation(fields: [absenceNoticeId], references: [id])
}

model Holiday {
  id          String   @id
  date        DateTime @unique
  name        String
  createdAt   DateTime @default(now())
}
